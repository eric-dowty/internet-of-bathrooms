$(document).ready(function(){

  var index = 0;
  var toiletSignal;
  const images = ["assets/toilet-open.png",
                  "assets/toilet-open-0.png",
                  "assets/toilet-open-1.png",
                  "assets/toilet-open-2.png"
                 ]

  function changeImage(){
    index >= 3 ? index = 0 : index++;
    console.log(index)
    $('#toilet-img').attr("src", images[index]);
    toiletSignal = setTimeout(changeImage, 400);
  }

  $('#toilet-img').mouseenter(function(){
    clearTimeout(toiletSignal);
    $(this).attr("src", "assets/toilet-closed.png");
  });

  $('#toilet-img').mouseleave(function(){
    changeImage();
  });

  changeImage();

});